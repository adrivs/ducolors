---
import Layout from "../layouts/Layout.astro";
import { colors } from "../lib/colors";
import copyIcon from "../assets/copy.svg";
---

<Layout title="Welcome to Astro.">
	<main>
		<div class="flex flex-col">
			<div class="text-4xl">
				<span class="font-bold">Duco</span><span class="italic"
					>lors</span
				>
			</div>
			<quote class="text-slate-500 text-sm">Vintage guitar colors</quote>
			<div class="grid grid-cols-4 gap-4">
				{
					colors.map((color) => (
						<div class="flex flex-col justify-center border-2 border-red-500 gap-4 items-center">
							{color.name}
							<div
								style={{ backgroundColor: color.hex }}
								class="w-2/3 h-28 rounded-md"
							/>
							<div class="flex gap-4 items-center">
								<>
									<div>{color.hex}</div>
									<img src={copyIcon.src} />
								</>
							</div>
						</div>
					))
				}
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: black;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
