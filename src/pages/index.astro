---
import { colors } from "../lib/colors";
import Layout from "../layouts/Layout.astro";
import ColorCard from "../components/ColorCard.astro";
---

<Layout title="Ducolors - Vintage guitar colors">
	<main>
		<div class="flex flex-col gap-10">
			<div class="text-4xl flex flex-col">
				<div>
					<span class="font-black">Duco</span><span class="italic"
						>lors</span
					>
				</div>
				<quote class="text-slate-500 text-xs"
					>Vintage guitar colors</quote
				>
			</div>
			<div class="grid grid-cols-1 gap-6 md:grid-cols-4 sm:grid-cols-2">
				{
					colors.map((color) => (
						<ColorCard
							name={color.name}
							currentColor={color.hex}
							color={color.hex}
						/>
					))
				}
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: black;
		font-size: 20px;
		line-height: 1.6;
	}

	.metallic {
		background: linear-gradient(135deg, #d4d4d4, #a6a6a6, #d4d4d4);
		background-size: 200% 200%;
		animation: metallic 1.5s linear infinite;
	}

	@keyframes metallic {
		0% {
			background-position: 0% 50%;
		}
		100% {
			background-position: 100% 50%;
		}
	}
</style>
